@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavors</h1>
<p>Select a flavor to see its description!</p>

@if (Model.Count == 0)
{
  <p>No flavors have been added yet.</p>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<button>
  @Html.ActionLink("Add flavor", "Create")
</button>
<button>
  @Html.ActionLink("Home", "Index", "Home")
</button>